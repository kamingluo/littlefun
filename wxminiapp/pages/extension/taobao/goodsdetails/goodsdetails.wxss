.screen-swiper {
  min-height: 600rpx;
}

.goods_desc {
  overflow: hidden;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  font-size: 26rpx;
}

.yuanjia {
  margin-left: 10rpx;
  font-size: 25rpx;
  color: #666;
  text-decoration: line-through;
}
.youhuiquan-body{
  border-radius:20rpx;
  width: 94%;
  margin-bottom: 20rpx;
  height: 100rpx;
}
.youhuiquan{
  font-size: 50rpx;
  font-weight: 600;
}
.youhuiquantime{
  font-size: 20rpx;

}
.menkan{
  margin-top: -7rpx;
}
.youhuiquanname{
  font-size: 30rpx;
  font-weight: 600;
}
.cu-btn.sm {
	padding: 0 10rpx;
	font-size: 20rpx;
	height: 48rpx;
}

.cu-bar {
	display: flex;
	position: relative;
	align-items: center;
	min-height: 70rpx;
	justify-content: space-between;
}
.goods_content {
  display: flex;
  justify-content: space-between;
  background: white;
  padding: 30rpx 30rpx 0 30rpx;
}

.content {
  width: 79%;
  line-height: 1.6;
}

.goods_title {
  font-size: 28rpx;
}

.goods_brief {
  font-size: 24rpx;
  color: #7f7f7f;
}

.goods_price {
  font-size: 40rpx;
  color: #c13431;
  /*font-weight: bold;*/
}

.share {
  flex-shrink: 0;
  text-align: center;
  margin-top: 20rpx;
}

.fenxiangicon {
  font-size: 38rpx;
}

.fenxiang {
  color: #585858;
  font-size: 25rpx;
}

.goodsimages {
  margin-top: 2rpx;
  background-color: white;
}

.images-body {
  width: 96%;
}
.zhanwei{
  width: 100%;
  height: 150rpx;
  background-color: white;
}

/*底部导航*/

.footer_nav {
  position: fixed;
  bottom: 0;
  left: 0;
  width: 100%;
  display: flex;
  height: 96rpx;
  background: white;
  border-top: 2rpx solid #f3f3f3;
}

.nav_list {
  width: 18%;
  text-align: center;
  height: 90rpx;
  line-height: 1.4;
  margin-top: 4rpx;
}

.nav_list .iconfont {
  font-size: 40rpx;
}

.nav_name {
  font-size: 24rpx;
  color: #7d7d7d;
}

.goods_buy {
  width: 34%;
  text-align: center;
  height: 96rpx;
  line-height: 96rpx;
  color: white;
  font-size: 30rpx;
}

.add_cart {
  background: #222;
}

.now_buy {
  background: #ad0e12;
}
