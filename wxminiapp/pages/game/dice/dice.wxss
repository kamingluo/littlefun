.game-info {
    
    height: 80rpx;
    display: flex;
    justify-content: space-between;
    align-items: flex-end;
    margin-left: 70%;

}
.game-info image {
  width: 60rpx;
  height: 60rpx;
}

.game-info text{
  font-size: 45rpx;
  font-weight: 600;
  margin-left: 10rpx;
  color: #f37b1d;
}



.dice-body {
    display: flex;
    flex-wrap: wrap;
    justify-content: space-around;
    margin-top: 20rpx;
}

.dice-box {
    margin: 26rpx;
    padding: 8rpx;
    background-color: #e7e7e7;
    width: 210rpx;
    height: 210rpx;
    box-shadow: inset 0 5px white, inset 0 -5px #bbb, inset 5px 0 #d7d7d7, inset -5px 0 #d7d7d7;
    border-radius: 10%;
}

.dice-point {
    display: block;
    width: 48rpx;
    height: 48rpx;
    border-radius: 50%;
    margin: 8rpx;
    background-color: #333;
    box-shadow: inset 0 6rpx #111, inset 0 -6rpx #555;
}

.self-flex-center {
    align-self: center;
}

.self-flex-end {
    align-self: flex-end;
}

.justify-center1 {
    justify-content: center !important;
}

.column {
    display: flex;
    flex-direction: column;
    justify-content: space-between;
}




.first {
    display: flex;
    justify-content: center;
    align-items: center;
}

.second {
    display: flex;
    justify-content: space-between;
}

.third {
    display: flex;
}

.fourth{
    display: flex;
